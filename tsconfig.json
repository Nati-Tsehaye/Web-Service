{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"], // Explicitly tell TypeScript where to find types
    "lib": ["es2020"] // Appropriate for a Node.js server
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
