{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "types": ["node"], // Keep this to include Node.js types
    "lib": ["es2020"] // More appropriate for a Node.js server
    // Removed: "noEmit", "allowJs", "isolatedModules", "jsx", "incremental", "plugins", "paths"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
